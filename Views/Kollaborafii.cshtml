@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Kollaborafii>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "Master.cshtml";
}
<!-- Система РОНСОН-500 -->
<section class="container mx-auto mb-10">
    <div class="grid lg:grid-cols-10 gap-5 items-stretch">
        <div class="card h-full flex flex-col justify-between lg:col-span-6">
            <div>
                <div class="flex flex-wrap gap-4 mb-6">
                    <div class="rounded-lg ">
                        <img src="/assets/img/k2.png" alt="White Hills" class="h-20 object-contain">
                    </div>
                    <div class="rounded-lg ">
                        <img src="/assets/img/k1.png" alt="РОНСОН" class="h-20 object-contain">
                    </div>
                </div>
                <h3 class="h3">Система РОНСОН-500</h3>
                <div class="body1 text-regular-primary mb-2 border border-gray inline-block px-4 py-2 rounded-lg body2 mt-4 mb-8">
                    Крепление декоративного камня механическим способом
                </div>

                <div class="body1 text-regular-primary mb-2 mb-20">
                    Современная фасадная система с облицовкой декоративным камнем. Отличается долговечностью,
                    эстетичностью, высокой морозостойкостью, огнестойкостью и сейсмостойкостью. Подходит для здания
                    любой этажности и обеспечивает безупречный внешний вид на протяжении десятилетий.
                </div>


            </div>

        </div>

        <div class="rounded-2xl overflow-hidden  h-full bg-white lg:col-span-4">
            <img src="/assets/img/k1.jpg" alt="Система РОНСОН-500"
                 class="m-auto object-cover max-h-[400px] mt-10 mb-10">
        </div>
    </div>
</section>
<!-- Система РОНСОН-740 -->
<section class="container mx-auto mb-16">
    <div class="grid lg:grid-cols-10 gap-5 items-stretch">
        <div class="rounded-2xl overflow-hidden  order-2 lg:order-1 h-full bg-white lg:col-span-4">
            <img src="/assets/img/k2.jpg" alt="Система РОНСОН-740"
                 class="m-auto object-cover max-h-[400px] mt-10 mb-10">
        </div>
        <div class="card order-1 lg:order-2 h-full flex flex-col justify-between lg:col-span-6">
            <div>
                <div class="flex flex-wrap gap-4 mb-6">
                    <div class="rounded-lg ">
                        <img src="/assets/img/k3.png" alt="RECKE BRICKEREI" class="h-20 object-contain">
                    </div>
                    <div class="rounded-lg ">
                        <img src="/assets/img/k1.png" alt="РОНСОН" class="h-20 object-contain">
                    </div>
                </div>
                <h3 class="h3">Система РОНСОН-740</h3>
                <div class="body1 text-regular-primary mb-2 border border-gray inline-block px-4 py-2 rounded-lg body2 mt-4 mb-8">
                    Крепление кирпича RECKE-РОНСОН
                </div>
                <div class="body1 text-regular-primary mb-2 mb-20">
                    Инновационное решение для фасадов из натурального кирпича с рекордно низким весом (от 80 кг/м²).
                    Патентованная технология крепления и легкие кирпичи толщиной 42 мм позволяют достичь беспрецедентной
                    скорости монтажа в любое время года без требований к квалификации рабочих.
                </div>
            </div>
        </div>
    </div>
</section>