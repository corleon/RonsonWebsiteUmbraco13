<!-- Video Section -->
<section class="container mx-auto py-16 px-4">
    <div class="mx-auto">
        <div class="relative rounded-4xl overflow-hidden shadow-lg">
            <!-- Video Container -->
            <video class="w-full h-auto md:h-[564px] object-cover" autoplay muted loop playsinline
                poster="/assets/img/p1.jpg">
                <source src="/assets/video/v2.mp4" type="video/mp4">
                Ваш браузер не поддерживает видео.
            </video>

            <!-- Expand Button -->
            <button
                onclick="toggleFullscreen()"
                class="absolute top-8 right-8 cursor-pointer">
                <img src="/assets/icons/expand.svg" alt="Развернуть на весь экран" class="w-10 h-10">
            </button>

            <!-- Fullscreen Video Container (hidden by default) -->
            <div id="fullscreenVideo" class="fixed inset-0 bg-black z-50 hidden">
                <video 
                    id="fullscreenVideoElement"
                    class="w-full h-full object-contain" 
                    autoplay 
                    muted 
                    loop 
                    playsinline
                    controls>
                    <source src="/assets/video/v2.mp4" type="video/mp4">
                    Ваш браузер не поддерживает видео.
                </video>
                
                <!-- Close Button -->
                <button 
                    onclick="closeFullscreen()"
                    class="absolute top-4 right-4 bg-white/90 hover:bg-white transition-all duration-200 rounded-full p-3 shadow-lg backdrop-blur-sm cursor-pointer">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <script>
                function toggleFullscreen() {
                    const fullscreenContainer = document.getElementById('fullscreenVideo');
                    const fullscreenVideo = document.getElementById('fullscreenVideoElement');
                    
                    if (fullscreenContainer.classList.contains('hidden')) {
                        // Open fullscreen
                        fullscreenContainer.classList.remove('hidden');
                        fullscreenVideo.play();
                        document.body.style.overflow = 'hidden'; // Prevent scrolling
                    } else {
                        // Close fullscreen
                        closeFullscreen();
                    }
                }

                function closeFullscreen() {
                    const fullscreenContainer = document.getElementById('fullscreenVideo');
                    const fullscreenVideo = document.getElementById('fullscreenVideoElement');
                    
                    fullscreenContainer.classList.add('hidden');
                    fullscreenVideo.pause();
                    document.body.style.overflow = 'auto'; // Restore scrolling
                }

                // Close fullscreen on Escape key
                document.addEventListener('keydown', function(event) {
                    if (event.key === 'Escape') {
                        closeFullscreen();
                    }
                });
            </script>

        </div>
    </div>
</section>